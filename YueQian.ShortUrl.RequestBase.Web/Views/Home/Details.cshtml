@modelYueQian.ShortUrl.RequestBase.Web.Models.DetailViewModel
@{    Layout = null;}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>@Model.NewsInfo.Title - @Model.TopicInfo - 求源网</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport" />
    <meta content="@Model.TopicInfo.Keywords,@Model.NewsInfo.Keywords" name="keywords" />
    <meta content="@Model.NewsInfo.Description" name="description" />
    <!-- Bootstrap 3.3.5 -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" />
    <!-- Theme style -->
    <link href="~/Content/AdminLTE/css/AdminLTE.min.css" rel="stylesheet" />
    <link href="~/Content/AdminLTE/css/skins/_all-skins.min.css" rel="stylesheet" />
    <link href="~/Content/AdminLTE/css/style.css" rel="stylesheet" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="//cdn.bootcss.com/html5shiv/3.7.3/html5shiv-printshiv.js"></script>
        <script src="//cdn.bootcss.com/respond.js/1.4.2/respond.js"></script>
    <![endif]-->
    <style>
        .content-wrapper, .main-footer { margin-left: 0; }
    </style>
</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">

        <header class="main-header">
            <a href="/" class="logo">
                <span class="logo-mini"><b>R</b>B</span>
                <span class="logo-lg"><b>Request</b>Base</span>
            </a>
            <nav class="navbar navbar-static-top" role="navigation">
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <li><a href="http://almsaeedstudio.com">QQ工作室</a></li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    @Model.TopicInfo.Title
                    <small>来源:@Model.TopicInfo.ComeFrom</small>
                </h1>
            </section>

            <div class="pad margin no-print">
                <div class="callout callout-info" style="margin-bottom: 0!important;">
                    <h4>简述:</h4>
                    @Model.NewsInfo.Description
                </div>
            </div>

            <!-- Main content -->
            <section class="invoice">
                <!-- title row -->
                <div class="row">
                    <div class="col-xs-12">
                        <h2 class="page-header">
                            <i class="fa fa-globe"></i> @Model.NewsInfo.Title
                            <small class="pull-right">发布日期: @Model.NewsInfo.CreationDataString</small>
                        </h2>
                    </div>
                </div>
                <div class="row invoice-info">
                    @Html.Raw(Model.NewsInfo.Contents)
                </div>
            </section><!-- /.content -->
            <div class="clearfix"></div>
        </div><!-- /.content-wrapper -->
        @Html.Partial("_Footer")
    </div>
</body>
</html>
